<h1>@Session["Name"]</h1>

<div>
    <input type="text" id="text" />
    <input type="button" id="submit" value="Поиск" />
    <div id="result">
    </div>
</div>


@helper ListofCustomers(string[] allCustomers)
{
    <ul>
        @foreach (string customer in allCustomers)
        {
            <li>
                @customer
            </li>
        }
    </ul>
}

